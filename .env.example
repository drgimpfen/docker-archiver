# Database
DB_PASSWORD=changeme123

# Application
SECRET_KEY=change-this-secret-key-in-production


# Optional: Enable Redis pub/sub for cross-worker SSE event streaming
# Set to a Redis URL (e.g., redis://localhost:6379/0)
# REDIS_URL=

# Downloads
# If enabled, visiting a missing download link can trigger automatic archive generation
# (useful for public regenerate-on-access flows). Set to 1/true/yes to enable.
DOWNLOADS_AUTO_GENERATE_ON_ACCESS=false

# If true, on container startup the app will attempt to generate missing downloads
# for tokens that reference existing archive directories but do not yet have a prepared archive file.
DOWNLOADS_AUTO_GENERATE_ON_STARTUP=false