# Example environment file for Docker-Archiver
# Copy this to .env and edit values before running.

# PostgreSQL connection string (required)
# Format: postgresql://<user>:<password>@<host>:<port>/<database>
DATABASE_URL=postgresql://archiver:password@db:5432/archiver

# App timezone for scheduler (e.g. Europe/Berlin, UTC)
TZ=Europe/Berlin

# Optional secret key (for production set a strong value)
SECRET_KEY=change_me_to_a_random_value

# Apprise settings (optional)
# APPRISE_URLS may be used by some deployments; in this app use the Settings UI to configure Apprise.
APPRISE_URLS=
APPRISE_ENABLED=false

# Local paths (inside container)
LOCAL_STACKS_PATH=/local
CONTAINER_BACKUP_DIR=/archives

# Public base URL for links in notifications (e.g. http://localhost:5000)
# If set, notifications include direct links to the archives and history pages.
APP_BASE_URL=http://localhost:5000

# DB init/connect tuning
DB_CONNECT_TIMEOUT=5
DB_INIT_ATTEMPTS=6
